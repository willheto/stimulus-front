{
	"compilerOptions": {
		"outDir": "./dist",
		"module": "esnext",
		"target": "es6",
		"lib": ["es6", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"baseUrl": "./",
		"rootDir": "./",
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"paths": {
			"@src/*": ["src/*"],
			"@assets/*": ["src/assets/*"],
			"@styles/*": ["src/styles/*"],
			"@components/*": ["src/components/*"],
			"@views/*": ["src/views/*"],
			"@utils/*": ["src/utils/*"]
		},
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"importsNotUsedAsValues": "preserve",
		"incremental": true,
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exclude": [
		"**/node_modules",
		"**/*.test.*",
		"src/**/*.spec.ts",
		"src/**/*.test.ts"
	]
}
